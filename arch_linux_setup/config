exec --no-startup-id reshift -l 55.751244:37.618423 -t 6500:5000 -b 1.0:0.8


# ГОРЯЧИЕ КЛАВИШИ
bindsym Print exec flameshot full -c
bindsym $mod+Print exec flameshot gui
bindsym $mod+Shift+f exec nautilus
bindsym $mod+F2 exec google-chrome-stable

# ПРИВЯЗКА К ВОРКСПЕЙСАМ
